  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    /* üåü THEME VARIABLES */
    :root {
      --bg-dark: #0a0a0c;
      --primary: #FF0055;
      --primary-glow: rgba(255, 0, 85, 0.6);
      --secondary: #00F0FF;
      --text-light: #ffffff;
      --text-muted: #aaaaaa;
      --glass-bg: rgba(25, 25, 30, 0.6);
      --glass-border: 1px solid rgba(255, 255, 255, 0.1);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; scroll-behavior: smooth; }

    body {
      font-family: 'Prompt', sans-serif;
      background-color: var(--bg-dark);
      color: var(--text-light);
      overflow-x: hidden;
    }

    /* üß≠ NAVBAR */
    .navbar {
      position: fixed;
      top: 0; left: 0; width: 100%;
      padding: 20px 50px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(10, 10, 12, 0.8);
      backdrop-filter: blur(15px);
      border-bottom: var(--glass-border);
      z-index: 1000;
      transition: 0.3s ease;
    }
    .logo {
      font-family: 'Playfair Display', serif;
      font-size: 28px;
      font-weight: 700;
      color: var(--primary);
      text-shadow: 0 0 15px var(--primary-glow);
      text-decoration: none;
      letter-spacing: 2px;
    }
    .nav-links { display: flex; gap: 30px; }
    .nav-links a {
      color: var(--text-light);
      text-decoration: none;
      font-weight: 400;
      font-size: 16px;
      transition: 0.3s;
    }
    .nav-links a:hover { color: var(--primary); text-shadow: 0 0 10px var(--primary-glow); }

    /* üì± MOBILE MENU */
    .menu-toggle { display: none; font-size: 24px; cursor: pointer; color: white; }

    /* üåÉ HERO SECTION */
    .hero {
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      background: linear-gradient(to bottom, rgba(10,10,12,0.3), var(--bg-dark)), 
                  url('https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?auto=format&fit=crop&w=1920&q=80') center/cover no-repeat;
      position: relative;
    }
    .hero-content {
      z-index: 2;
      animation: fadeInUp 1.5s ease;
    }
    .hero h1 {
      font-family: 'Playfair Display', serif;
      font-size: 5rem;
      text-transform: uppercase;
      letter-spacing: 5px;
      margin-bottom: 10px;
    }
    .hero h1 span { color: var(--primary); text-shadow: 0 0 20px var(--primary-glow); }
    .hero p { font-size: 1.2rem; color: #ddd; margin-bottom: 30px; font-weight: 300; }
    
    .btn {
      padding: 15px 35px;
      font-size: 16px;
      font-weight: 600;
      font-family: 'Prompt', sans-serif;
      text-decoration: none;
      border-radius: 30px;
      transition: 0.3s;
      display: inline-block;
    }
    .btn-primary {
      background: linear-gradient(45deg, var(--primary), #ff0088);
      color: white;
      box-shadow: 0 5px 20px var(--primary-glow);
      border: none;
    }
    .btn-primary:hover { transform: translateY(-3px); box-shadow: 0 8px 25px var(--primary-glow); }
    .btn-outline {
      background: transparent;
      color: var(--secondary);
      border: 1px solid var(--secondary);
      margin-left: 15px;
    }
    .btn-outline:hover { background: rgba(0, 240, 255, 0.1); box-shadow: 0 0 15px rgba(0,240,255,0.4); }

    /* üìÑ SECTION COMMON */
    section { padding: 100px 50px; }
    .section-title {
      text-align: center; font-size: 2.5rem; font-weight: 800; margin-bottom: 50px;
      text-transform: uppercase; letter-spacing: 2px;
    }
    .section-title span { color: var(--primary); }

    /* üç∏ MENU SECTION */
    #menu { background: radial-gradient(circle at left, #1a0812, var(--bg-dark)); }
    .menu-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
    }
    .menu-card {
      background: var(--glass-bg);
      border: var(--glass-border);
      border-radius: 20px;
      padding: 30px;
      text-align: center;
      backdrop-filter: blur(10px);
      transition: 0.4s ease;
    }
    .menu-card:hover { transform: translateY(-10px); border-color: var(--primary); box-shadow: 0 10px 30px rgba(255,0,85,0.2); }
    .menu-icon { font-size: 40px; color: var(--secondary); margin-bottom: 15px; }
    .menu-card h3 { font-size: 1.5rem; margin-bottom: 15px; color: var(--text-light); }
    .menu-item { display: flex; justify-content: space-between; margin-bottom: 10px; font-weight: 300; border-bottom: 1px dashed #333; padding-bottom: 5px; }
    .menu-item .price { color: var(--primary); font-weight: 600; }

    /* üì∏ GALLERY SECTION */
    #gallery { max-width: 1400px; margin: 0 auto; }
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
    }
    .gallery-item {
      height: 300px;
      border-radius: 15px;
      overflow: hidden;
      position: relative;
    }
    .gallery-item img {
      width: 100%; height: 100%; object-fit: cover;
      transition: 0.5s ease;
    }
    .gallery-item:hover img { transform: scale(1.1); filter: brightness(0.7); }
    .gallery-overlay {
      position: absolute; top: 0; left: 0; width: 100%; height: 100%;
      background: rgba(255,0,85,0.3); opacity: 0; transition: 0.3s ease;
      display: flex; justify-content: center; align-items: center; font-size: 30px; color: white;
    }
    .gallery-item:hover .gallery-overlay { opacity: 1; }

    /* üìç CONTACT / FOOTER */
    #contact {
      background: #050505;
      padding: 80px 50px;
      text-align: center;
      border-top: 1px solid #222;
    }
    .contact-info { margin-bottom: 30px; font-weight: 300; color: var(--text-muted); line-spacing: 1.8; }
    .contact-info i { color: var(--primary); margin-right: 10px; }
    .social-links a {
      display: inline-flex; justify-content: center; align-items: center;
      width: 50px; height: 50px; border-radius: 50%;
      background: #111; color: white; font-size: 20px; text-decoration: none;
      margin: 0 10px; transition: 0.3s; border: var(--glass-border);
    }
    .social-links a:hover { background: var(--primary); transform: translateY(-5px); box-shadow: 0 5px 15px var(--primary-glow); }
    .footer-text { margin-top: 50px; font-size: 12px; color: #555; }

    /* ‚ú® ANIMATIONS */
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .reveal { opacity: 0; transform: translateY(50px); transition: all 0.8s ease-out; }
    .reveal.active { opacity: 1; transform: translateY(0); }

    /* üì± RESPONSIVE */
    @media (max-width: 768px) {
